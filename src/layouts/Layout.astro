---
import { Image } from 'astro:assets';
import logoBlanco from '@assets/img/logo_blanco.png';
import '@styles/global.css';

interface Props {
	title: string;
    heroDescription?: string;
}

const { title, heroDescription } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<meta name="robots" content="noindex" />
		<title>{title}</title>
	</head>
	<body class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-white font-sans antialiased">
        <!-- Hero Section -->
        <div class="relative bg-linear-to-br from-brand-900 via-brand-800 to-accent-900 text-white py-16 px-4 sm:px-6 lg:px-8 shadow-2xl overflow-hidden">
            
            <!-- Modern Abstract Background -->
            <div class="absolute inset-0 overflow-hidden pointer-events-none">
                <!-- Grid Pattern -->
                <div class="absolute inset-0 bg-[linear-gradient(to_right,#ffffff08_1px,transparent_1px),linear-gradient(to_bottom,#ffffff08_1px,transparent_1px)] bg-size-[32px_32px]"></div>
                
                <!-- Glowing Orbs -->
                <div class="absolute -top-[20%] -right-[10%] w-[50%] h-[50%] rounded-full bg-accent-500/30 blur-[120px]"></div>
                <div class="absolute -bottom-[20%] -left-[10%] w-[50%] h-[50%] rounded-full bg-brand-500/30 blur-[120px]"></div>
            </div>

            <div class="max-w-7xl mx-auto relative z-10">
                <div class="flex flex-col items-start gap-8">
                    <!-- Back Button Pill -->
                    <div class="space-y-6 max-w-4xl">
                        <div class="relative">
                             <Image src={logoBlanco} alt="Revalora Circular Logo" height={90} class="h-24 w-auto object-contain drop-shadow-xl" />
                        </div>
                        
                        {heroDescription && (
                            <p class="text-xl md:text-2xl text-brand-50 font-light leading-relaxed max-w-3xl border-l-4 border-accent-400 pl-6 py-2">
                                {heroDescription}
                            </p>
                        )}
                    </div>
                </div>
            </div>
        </div>

		<slot />
	</body>
</html>
