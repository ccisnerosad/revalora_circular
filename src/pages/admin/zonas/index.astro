---
import Layout from '@layouts/LayoutFo.astro';
import zonesData from '@data/core/zonas.json';
import pointsData from '@data/core/puntos.json';
import type { Zone, Point } from 'src/types/core';

// Mock Data
const zonesList: Zone[] = zonesData as Zone[];
const pointsList: Point[] = pointsData as Point[];

const zones = zonesList.map(zone => ({
  ...zone,
  points: pointsList.filter(point => point.zona_id === zone.id)
}));
---

<Layout title="Administración: Gestión de Zonas y Puntos">
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900 pb-12">
    <!-- Header -->
    <div class="bg-white dark:bg-gray-800 shadow-sm border-b border-gray-200 dark:border-gray-700">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
          <div>
            <div class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400 mb-1">
              <a href="/modulos" class="hover:text-brand-600 dark:hover:text-brand-400 transition-colors">Módulos</a>
              <span>/</span>
              <a href="/admin" class="hover:text-brand-600 dark:hover:text-brand-400 transition-colors">Administración</a>
              <span>/</span>
              <span class="text-gray-900 dark:text-white font-medium">Zonas y Puntos de Acopio</span>
            </div>
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Gestión de Zonas y Puntos de Acopio</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Configuración de la estructura de recolección.</p>
          </div>
          <a href="/admin/zonas/edit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-brand-600 hover:bg-brand-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-brand-500 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Nueva Zona
          </a>
        </div>
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 space-y-8">
      
      {zones.map(zone => (
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-700/50 flex justify-between items-center">
            <div>
              <h2 class="text-lg font-bold text-gray-900 dark:text-white flex items-center gap-2">
                <span class="px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">{zone.id}</span>
                <a href={`/admin/zonas/view?id=${zone.id}`} class="hover:text-brand-600 transition-colors">{zone.name}</a>
              </h2>
              <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">{zone.description}</p>
            </div>
            <div class="flex gap-2">
              <a href={`/admin/zonas/view?id=${zone.id}`} class="text-gray-400 hover:text-brand-600 dark:hover:text-brand-400 transition-colors" title="Ver Detalle">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
              </a>
              <a href={`/admin/zonas/edit?id=${zone.id}`} class="text-gray-400 hover:text-brand-600 dark:hover:text-brand-400 transition-colors" title="Editar">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                </svg>
              </a>
              <button class="text-gray-400 hover:text-red-600 dark:hover:text-red-400 transition-colors" title="Eliminar">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              </button>
            </div>
          </div>
          
          <div class="p-6">
            <div class="flex justify-between items-center mb-4">
              <h3 class="text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">Puntos de Acopio</h3>
              <a href={`/admin/zonas/puntos/edit?zoneId=${zone.id}`} class="text-sm text-brand-600 dark:text-brand-400 font-medium hover:underline flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Agregar Punto
              </a>
            </div>
            
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700 border border-gray-200 dark:border-gray-700 rounded-lg">
                <thead class="bg-gray-50 dark:bg-gray-800">
                  <tr>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nombre</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tipo</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Capacidad</th>
                    <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Acciones</th>
                  </tr>
                </thead>
                <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                  {zone.points.map(point => (
                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
                      <td class="px-4 py-2 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">{point.id}</td>
                      <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">{point.name}</td>
                      <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">{point.type}</td>
                      <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">{point.capacity}</td>
                      <td class="px-4 py-2 whitespace-nowrap text-right text-sm font-medium">
                        <a href={`/admin/zonas/puntos/timeline?zoneId=${zone.id}&pointId=${point.id}`} class="text-blue-600 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300 mr-3">Historial</a>
                        <a href={`/admin/zonas/puntos/edit?zoneId=${zone.id}&id=${point.id}`} class="text-brand-600 hover:text-brand-900 dark:text-brand-400 dark:hover:text-brand-300 mr-3">Editar</a>
                        <button class="text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300">Eliminar</button>
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      ))}

    </div>
  </div>
</Layout>