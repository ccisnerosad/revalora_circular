---
import Layout from '@layouts/LayoutFo.astro';
import catalogs from '@data/diag/catalogs.json';
import surveys from '@data/diag/surveys.json';
import wasteRecords from '@data/diag/waste_records.json';

const { zones, waste_classifications, waste_states, contamination_levels } = catalogs;

const id = Astro.url.searchParams.get('id');

const getSurvey = () => {
  if (id) {
    const found = surveys.find(s => s.id === id);
    if (found) return found;
  }
  return {
    id: '',
    zone: '',
    specific_area: '',
    evaluator_name: '',
    team_name: '',
    shift: '',
    weather: '',
    status: 'NEW',
    start_at: new Date().toISOString(),
    end_at: null,
    site_conditions: {
      leachates: false,
      odor: 'Ninguno',
      fauna: false,
      inorganic_mix: false,
      obstruction: false
    },
    evidence: {
      photos: false,
      video: false,
      sketch: false,
      additional_observations: ''
    },
    general_observations: '',
    validation: {
      evaluator_signature: '',
      date: new Date().toISOString().split('T')[0]
    },
    linked_formats: {}
  };
};

const currentSurvey = getSurvey();
const existingRecords = currentSurvey.id ? wasteRecords.filter(r => r.survey_id === currentSurvey.id) : [];
const isEditing = !!currentSurvey.id;

// Helper to format date for datetime-local input
const formatDateForInput = (isoString: string) => {
  if (!isoString) return '';
  return new Date(isoString).toISOString().slice(0, 16);
};
---

<Layout title={`FO-DIAG-01: ${isEditing ? 'Editar' : 'Nuevo'} Registro`}>
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900 pb-24">
    <!-- Header -->
    <div class="bg-white dark:bg-gray-800 shadow-sm border-b border-gray-200 dark:border-gray-700 sticky top-0 z-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400 mb-2">
          <a href="/diagnostico_residuos" class="hover:text-brand-600 dark:hover:text-brand-400 transition-colors">Formatos</a>
          <span>/</span>
          <a href="/fo-diag/fo-diag-01" class="hover:text-brand-600 dark:hover:text-brand-400 transition-colors">FO-DIAG-01</a>
          <span>/</span>
          <span class="text-gray-900 dark:text-white font-medium">{isEditing ? 'Editar' : 'Nuevo'}</span>
        </div>
        <div class="flex justify-between items-center">
          <div>
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">{isEditing ? 'Editar Registro de Residuos' : 'Nuevo Registro'}</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">{isEditing ? 'Edite la información de la zona y gestione los hallazgos.' : 'Complete la información para registrar una nueva zona.'}</p>
          </div>
          <div class="flex items-center space-x-3">
            <span class="hidden sm:inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300">
              {isEditing ? 'En Edición' : 'Nuevo'}
            </span>
            <button class="px-4 py-2 bg-brand-600 hover:bg-brand-700 text-white text-sm font-medium rounded-lg shadow-sm transition-colors">
              Guardar Cambios
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 space-y-8">
      
      <!-- Step 1: Context -->
      <section class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-700/50 flex justify-between items-center">
          <h2 class="text-lg font-bold text-gray-900 dark:text-white flex items-center">
            <span class="flex items-center justify-center w-6 h-6 rounded-full bg-brand-100 dark:bg-brand-900 text-brand-600 dark:text-brand-300 text-xs font-bold mr-3">1</span>
            Datos Generales
          </h2>
        </div>
        <div class="p-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Zona / Pasillo</label>
            <select class="block w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:border-brand-500 focus:ring-brand-500 sm:text-sm py-2.5">
              <option value="">Seleccione una zona...</option>
              {zones.map(zone => (
                <option value={zone} selected={zone === currentSurvey.zone}>{zone}</option>
              ))}
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Área Específica</label>
            <input type="text" value={currentSurvey.specific_area} class="block w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:border-brand-500 focus:ring-brand-500 sm:text-sm py-2.5" />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Evaluador</label>
            <input type="text" value={currentSurvey.evaluator_name} class="block w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:border-brand-500 focus:ring-brand-500 sm:text-sm py-2.5" />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Brigada</label>
            <input type="text" value={currentSurvey.team_name} class="block w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:border-brand-500 focus:ring-brand-500 sm:text-sm py-2.5" />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Clima Actual</label>
            <select class="block w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:border-brand-500 focus:ring-brand-500 sm:text-sm py-2.5">
              <option selected={currentSurvey.weather === 'Soleado'}>Soleado</option>
              <option selected={currentSurvey.weather === 'Nublado'}>Nublado</option>
              <option selected={currentSurvey.weather === 'Lluvioso'}>Lluvioso</option>
              <option selected={currentSurvey.weather === 'Húmedo'}>Húmedo</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Fecha de Registro</label>
            <input type="datetime-local" value={formatDateForInput(currentSurvey.start_at)} class="block w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:border-brand-500 focus:ring-brand-500 sm:text-sm py-2.5" />
          </div>
        </div>
      </section>

      <!-- Step 2: Waste Items -->
      <section class="space-y-6">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-bold text-gray-900 dark:text-white flex items-center">
            <span class="flex items-center justify-center w-6 h-6 rounded-full bg-brand-100 dark:bg-brand-900 text-brand-600 dark:text-brand-300 text-xs font-bold mr-3">2</span>
            Identificación del Residuo Observado
          </h2>
        </div>

        <!-- List of Added Items -->
        <div class="space-y-4">
          {existingRecords.length === 0 ? (
            <div class="border-2 border-dashed border-gray-300 dark:border-gray-700 rounded-xl p-12 text-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No hay residuos registrados</h3>
              <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Comience agregando el primer hallazgo de esta zona.</p>
            </div>
          ) : (
            existingRecords.map((item, index) => (
              <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 flex justify-between items-center bg-gray-50 dark:bg-gray-700/50">
                  <div class="flex items-center space-x-3">
                    <span class="shrink-0 h-8 w-8 rounded-full bg-brand-100 dark:bg-brand-900 flex items-center justify-center text-brand-600 dark:text-brand-300 font-bold text-sm">
                      {index + 1}
                    </span>
                    <div>
                      <h3 class="text-sm font-bold text-gray-900 dark:text-white">{item.type}</h3>
                      <p class="text-xs text-gray-500 dark:text-gray-400">{item.classification} • {item.state}</p>
                    </div>
                  </div>
                  <div class="flex space-x-2">
                    <button class="p-1 text-gray-400 hover:text-brand-600 transition-colors">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                    </button>
                    <button class="p-1 text-gray-400 hover:text-red-600 transition-colors">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    </button>
                  </div>
                </div>
                <div class="px-6 py-4 grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <p class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Detalles</p>
                    <div class="space-y-1">
                      <div class="flex justify-between text-sm">
                        <span class="text-gray-500">Contaminación:</span>
                        <span class="font-medium text-gray-900 dark:text-white">{item.contamination}</span>
                      </div>
                      <div class="flex justify-between text-sm">
                        <span class="text-gray-500">Observaciones:</span>
                        <span class="font-medium text-gray-900 dark:text-white truncate max-w-[200px]">{item.observations}</span>
                      </div>
                    </div>
                  </div>
                  <div>
                    <p class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">Potencial (3)</p>
                    <div class="grid grid-cols-2 gap-2 text-xs">
                      <div class="bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">H: {item.potential.human}</div>
                      <div class="bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">A: {item.potential.animal}</div>
                      <div class="bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">B: {item.potential.biofertilizer}</div>
                      <div class="bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">C: {item.potential.compost}</div>
                    </div>
                  </div>
                </div>
              </div>
            ))
          )}
        </div>

        <!-- Add Item Form (Card) -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-brand-200 dark:border-brand-800 ring-1 ring-brand-500/20 overflow-hidden transition-all duration-300" id="add-item-card">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-brand-50 dark:bg-brand-900/20 flex justify-between items-center">
            <h3 class="font-bold text-brand-800 dark:text-brand-300">Agregar Nuevo Residuo</h3>
            <span class="text-xs text-brand-600 dark:text-brand-400 uppercase tracking-wider font-semibold">Formulario</span>
          </div>
          
          <div class="p-6 space-y-6">
            <!-- Basic Info -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Tipo de Residuo</label>
                <input type="text" placeholder="Ej. Tomate, Cartón, Plástico..." class="block w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:border-brand-500 focus:ring-brand-500 sm:text-sm py-2.5" />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Clasificación</label>
                <div class="flex flex-wrap gap-2">
                  {waste_classifications.map(cls => (
                    <label class="cursor-pointer">
                      <input type="radio" name="classification" class="peer sr-only" />
                      <span class="inline-block px-3 py-1.5 rounded-full text-sm border border-gray-200 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-700 dark:text-gray-300 peer-checked:bg-brand-100 peer-checked:text-brand-800 peer-checked:border-brand-200 dark:peer-checked:bg-brand-900 dark:peer-checked:text-brand-200 dark:peer-checked:border-brand-700 transition-all hover:bg-gray-100 dark:hover:bg-gray-600">
                        {cls}
                      </span>
                    </label>
                  ))}
                </div>
              </div>
            </div>

            <div class="border-t border-gray-100 dark:border-gray-700 pt-4 grid grid-cols-1 md:grid-cols-2 gap-8">
              <!-- Left: Physical State -->
              <div class="space-y-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Estado Físico</label>
                  <div class="grid grid-cols-2 gap-3">
                    {waste_states.map(state => (
                      <label class="cursor-pointer">
                        <input type="radio" name="state" class="peer sr-only" />
                        <div class="text-center px-3 py-2 rounded-lg border border-gray-200 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-700 dark:text-gray-300 peer-checked:bg-brand-50 peer-checked:border-brand-500 peer-checked:text-brand-700 dark:peer-checked:bg-brand-900/30 dark:peer-checked:text-brand-300 transition-all">
                          {state}
                        </div>
                      </label>
                    ))}
                  </div>
                </div>
                
                <div>
                  <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Contaminación</label>
                  <div class="flex items-center space-x-4">
                    {contamination_levels.map(level => (
                      <label class="flex items-center cursor-pointer">
                        <input type="radio" name="contamination" class="h-4 w-4 text-brand-600 focus:ring-brand-500 border-gray-300" />
                        <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">{level}</span>
                      </label>
                    ))}
                  </div>
                </div>
                
                <div>
                  <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Observaciones</label>
                  <textarea rows="2" class="block w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:border-brand-500 focus:ring-brand-500 sm:text-sm py-2.5"></textarea>
                </div>
              </div>

              <!-- Right: Potential -->
              <div class="bg-gray-50 dark:bg-gray-700/30 rounded-lg p-4 border border-gray-100 dark:border-gray-700">
                <h4 class="text-sm font-bold text-gray-900 dark:text-white mb-4">3. Potencial de Aprovechamiento</h4>
                <div class="space-y-4">
                  {['Humano', 'Animal', 'Biofertilizante', 'Composta'].map(type => (
                    <div>
                      <div class="flex justify-between text-xs mb-1">
                        <span class="text-gray-600 dark:text-gray-400">{type}</span>
                        <span class="text-gray-400">Bajo &rarr; Alto</span>
                      </div>
                      <input type="range" min="0" max="3" step="1" class="w-full h-1.5 bg-gray-200 rounded-lg appearance-none cursor-pointer dark:bg-gray-600 accent-brand-600" />
                    </div>
                  ))}
                </div>
              </div>
            </div>

            <!-- Actions -->
            <div class="flex justify-end space-x-3 pt-4 border-t border-gray-100 dark:border-gray-700">
              <button class="px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-lg text-gray-700 dark:text-gray-200 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                Limpiar
              </button>
              <button class="px-4 py-2 bg-gray-900 dark:bg-white text-white dark:text-gray-900 text-sm font-medium rounded-lg hover:bg-gray-800 dark:hover:bg-gray-100 shadow-sm transition-colors flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                Agregar a la Lista
              </button>
            </div>
          </div>
        </div>

      </section>

      <!-- Step 4: Site Conditions -->
      <section class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-700/50 flex justify-between items-center">
          <h2 class="text-lg font-bold text-gray-900 dark:text-white flex items-center">
            <span class="flex items-center justify-center w-6 h-6 rounded-full bg-brand-100 dark:bg-brand-900 text-brand-600 dark:text-brand-300 text-xs font-bold mr-3">4</span>
            Condiciones del Residuo en Sitio
          </h2>
        </div>
        <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-4">
            <label class="flex items-center justify-between p-4 border border-gray-200 dark:border-gray-700 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700/50 cursor-pointer transition-colors">
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Presencia de lixiviados</span>
              <input type="checkbox" checked={currentSurvey.site_conditions.leachates} class="h-5 w-5 text-brand-600 focus:ring-brand-500 border-gray-300 rounded" />
            </label>
            <div class="p-4 border border-gray-200 dark:border-gray-700 rounded-lg">
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Olor ofensivo</label>
              <select class="block w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:border-brand-500 focus:ring-brand-500 sm:text-sm py-2">
                <option selected={currentSurvey.site_conditions.odor === 'Ninguno'}>Ninguno</option>
                <option selected={currentSurvey.site_conditions.odor === 'Leve'}>Leve</option>
                <option selected={currentSurvey.site_conditions.odor === 'Fuerte'}>Fuerte</option>
                <option selected={currentSurvey.site_conditions.odor === 'Muy Fuerte'}>Muy Fuerte</option>
              </select>
            </div>
            <label class="flex items-center justify-between p-4 border border-gray-200 dark:border-gray-700 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700/50 cursor-pointer transition-colors">
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Presencia de fauna nociva</span>
              <input type="checkbox" checked={currentSurvey.site_conditions.fauna} class="h-5 w-5 text-brand-600 focus:ring-brand-500 border-gray-300 rounded" />
            </label>
          </div>
          <div class="space-y-4">
            <label class="flex items-center justify-between p-4 border border-gray-200 dark:border-gray-700 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700/50 cursor-pointer transition-colors">
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Mezcla con residuos no orgánicos</span>
              <input type="checkbox" checked={currentSurvey.site_conditions.inorganic_mix} class="h-5 w-5 text-brand-600 focus:ring-brand-500 border-gray-300 rounded" />
            </label>
            <label class="flex items-center justify-between p-4 border border-gray-200 dark:border-gray-700 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700/50 cursor-pointer transition-colors">
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Obstaculización del paso</span>
              <input type="checkbox" checked={currentSurvey.site_conditions.obstruction} class="h-5 w-5 text-brand-600 focus:ring-brand-500 border-gray-300 rounded" />
            </label>
          </div>
        </div>
      </section>

      <!-- Step 5: Evidence -->
      <section class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-700/50 flex justify-between items-center">
          <h2 class="text-lg font-bold text-gray-900 dark:text-white flex items-center">
            <span class="flex items-center justify-center w-6 h-6 rounded-full bg-brand-100 dark:bg-brand-900 text-brand-600 dark:text-brand-300 text-xs font-bold mr-3">5</span>
            Evidencia Documental
          </h2>
        </div>
        <div class="p-6 space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class={`border-2 border-dashed rounded-lg p-6 flex flex-col items-center justify-center text-center transition-colors cursor-pointer ${currentSurvey.evidence.photos ? 'border-green-500 bg-green-50 dark:bg-green-900/20' : 'border-gray-300 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700/50'}`}>
              <svg class={`h-10 w-10 mb-3 ${currentSurvey.evidence.photos ? 'text-green-500' : 'text-gray-400'}`} fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span class={`text-sm font-medium ${currentSurvey.evidence.photos ? 'text-green-700 dark:text-green-300' : 'text-gray-900 dark:text-white'}`}>
                {currentSurvey.evidence.photos ? 'Fotografías Cargadas' : 'Subir Fotografías'}
              </span>
              <span class="text-xs text-gray-500 mt-1">JPG, PNG hasta 5MB</span>
            </div>
            <div class={`border-2 border-dashed rounded-lg p-6 flex flex-col items-center justify-center text-center transition-colors cursor-pointer ${currentSurvey.evidence.video ? 'border-green-500 bg-green-50 dark:bg-green-900/20' : 'border-gray-300 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700/50'}`}>
              <svg class={`h-10 w-10 mb-3 ${currentSurvey.evidence.video ? 'text-green-500' : 'text-gray-400'}`} fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
              <span class={`text-sm font-medium ${currentSurvey.evidence.video ? 'text-green-700 dark:text-green-300' : 'text-gray-900 dark:text-white'}`}>
                 {currentSurvey.evidence.video ? 'Video Cargado' : 'Subir Video'}
              </span>
              <span class="text-xs text-gray-500 mt-1">MP4, MOV hasta 20MB</span>
            </div>
            <div class={`border-2 border-dashed rounded-lg p-6 flex flex-col items-center justify-center text-center transition-colors cursor-pointer ${currentSurvey.evidence.sketch ? 'border-green-500 bg-green-50 dark:bg-green-900/20' : 'border-gray-300 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700/50'}`}>
              <svg class={`h-10 w-10 mb-3 ${currentSurvey.evidence.sketch ? 'text-green-500' : 'text-gray-400'}`} fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0121 18.382V7.618a1 1 0 01-1.447-.894L15 7m0 13V7" />
              </svg>
              <span class={`text-sm font-medium ${currentSurvey.evidence.sketch ? 'text-green-700 dark:text-green-300' : 'text-gray-900 dark:text-white'}`}>
                 {currentSurvey.evidence.sketch ? 'Croquis Cargado' : 'Subir Croquis'}
              </span>
              <span class="text-xs text-gray-500 mt-1">PDF, JPG, PNG</span>
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Observaciones Adicionales de Evidencia</label>
            <textarea rows="3" class="block w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:border-brand-500 focus:ring-brand-500 sm:text-sm py-2.5">{currentSurvey.evidence.additional_observations}</textarea>
          </div>
        </div>
      </section>

      <!-- Step 6: General Observations -->
      <section class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-700/50 flex justify-between items-center">
          <h2 class="text-lg font-bold text-gray-900 dark:text-white flex items-center">
            <span class="flex items-center justify-center w-6 h-6 rounded-full bg-brand-100 dark:bg-brand-900 text-brand-600 dark:text-brand-300 text-xs font-bold mr-3">6</span>
            Observaciones Generales
          </h2>
        </div>
        <div class="p-6">
          <textarea rows="4" placeholder="Ingrese cualquier observación general sobre el levantamiento..." class="block w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:border-brand-500 focus:ring-brand-500 sm:text-sm py-2.5">{currentSurvey.general_observations}</textarea>
        </div>
      </section>

      <!-- Step 7: Validation -->
      <section class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-700/50 flex justify-between items-center">
          <h2 class="text-lg font-bold text-gray-900 dark:text-white flex items-center">
            <span class="flex items-center justify-center w-6 h-6 rounded-full bg-brand-100 dark:bg-brand-900 text-brand-600 dark:text-brand-300 text-xs font-bold mr-3">7</span>
            Validación del Registro
          </h2>
        </div>
        <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Nombre del Evaluador (Firma)</label>
            <input type="text" value={currentSurvey.validation.evaluator_signature} class="block w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:border-brand-500 focus:ring-brand-500 sm:text-sm py-2.5" />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Fecha de Validación</label>
            <input type="date" value={currentSurvey.validation.date} class="block w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm focus:border-brand-500 focus:ring-brand-500 sm:text-sm py-2.5" />
          </div>
        </div>
      </section>

    </div>
  </div>
</Layout>
