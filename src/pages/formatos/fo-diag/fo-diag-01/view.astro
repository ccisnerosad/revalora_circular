---
import type { SiteCondition } from '@app-types/formats'
import Layout from '@layouts/LayoutFo.astro';
import recordsData from '@data/diag/registros_fo_diag_01.json';
import infoFormato from '@data/diag/format_diag.json';
import characterizationData from '@data/diag/caracterizaciones_fo_diag_01.json';
import zonesData from '@data/core/zonas.json';
import pointsData from '@data/core/puntos.json';

const id = Astro.url.searchParams.get('id') || 'REC-001';

//Nomobre del formato
const formatoInfo = infoFormato.find(f => f.format_id === 'FO-DIAG-01');
const formatoName = formatoInfo ? formatoInfo.format_name : 'Formato Desconocido';

// Find the record
const rawRecord = recordsData.find(r => r.id === id);

if (!rawRecord) {
  return Astro.redirect('/404');
}

// Find related data
const point = pointsData.find(p => p.id === rawRecord.point_id);
const zone = zonesData.find(z => z.id === point?.zona_id);
const recordCharacterization = characterizationData.filter(c => c.record_id === rawRecord.id);

// Transform to view model
const record = {
  id: rawRecord.id,
  context: {
    date: rawRecord.date,
    time: rawRecord.time,
    zone: zone?.name || 'Zona Desconocida',
    point: point?.name || 'Punto Desconocido',
    evaluator: rawRecord.evaluator,
    shift: rawRecord.shift
  },
  siteCondition: rawRecord.siteCondition as unknown as SiteCondition,
  generation: rawRecord.generation,
  characterization: recordCharacterization || []
};
---

<Layout title={`FO-DIAG-01: Detalle del Registro ${id}`}>
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900 pb-12">
    <!-- Header -->
    <div class="bg-white dark:bg-gray-800 shadow-sm border-b border-gray-200 dark:border-gray-700 sticky top-0 z-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400 mb-2">
          <a href="/formatos" class="hover:text-brand-600 dark:hover:text-brand-400 transition-colors">Formatos</a>
          <span>/</span>
          <a href="/formatos/fo-diag" class="hover:text-brand-600 dark:hover:text-brand-400 transition-colors">Diagnóstico de Residuos</a>
          <span>/</span>
          <a href="/formatos/fo-diag/fo-diag-01" class="hover:text-brand-600 dark:hover:text-brand-400 transition-colors">FO-DIAG-01</a>
          <span>/</span>
          <span class="text-gray-900 dark:text-white font-medium">{id}</span>
        </div>
        <div class="flex justify-between items-center">
          <div>
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Detalle de Registro</h1>
            <small class="text-gray-500 dark:text-gray-400"><b>{formatoName}</b></small>
            <div class="flex items-center gap-2 mt-1">
              <p class="text-sm text-gray-500 dark:text-gray-400">Punto de Acopio: {record.context.point}</p>
              <span class="text-gray-300 dark:text-gray-600">|</span>
              <a href="/admin/zonas/puntos/timeline?pointId=P-01" class="text-sm font-medium text-brand-600 hover:text-brand-500 dark:text-brand-400 hover:underline">
                Ver Historial
              </a>
            </div>
          </div>
          <div class="flex gap-3">
            <a href={`/formatos/fo-diag/fo-diag-01/edit?id=${id}`} class="px-4 py-2 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-200 text-sm font-medium rounded-lg shadow-sm hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors">
              Editar
            </a>
            <button class="px-4 py-2 bg-brand-600 hover:bg-brand-700 text-white text-sm font-medium rounded-lg shadow-sm transition-colors">
              Exportar PDF
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 space-y-8">
      
      <!-- 1. Contexto -->
      <section class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-700/50 flex justify-between items-center">
          <h2 class="text-lg font-bold text-gray-900 dark:text-white">1. Contexto del Levantamiento</h2>
          <span class="text-xs font-medium px-2.5 py-0.5 rounded bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300">
            {record.context.date} • {record.context.time}
          </span>
        </div>
        <div class="p-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div>
            <span class="block text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wider">Zona</span>
            <span class="block text-sm font-medium text-gray-900 dark:text-white mt-1">{record.context.zone}</span>
          </div>
          <div>
            <span class="block text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wider">Punto de Acopio</span>
            <span class="block text-sm font-medium text-gray-900 dark:text-white mt-1">{record.context.point}</span>
          </div>
          <div>
            <span class="block text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wider">Evaluador</span>
            <span class="block text-sm font-medium text-gray-900 dark:text-white mt-1">{record.context.evaluator}</span>
          </div>
          <div>
            <span class="block text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wider">Turno</span>
            <span class="block text-sm font-medium text-gray-900 dark:text-white mt-1">{record.context.shift}</span>
          </div>
        </div>
      </section>

      <!-- 2. Nivel de Generación -->
      <section class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-700/50">
          <h2 class="text-lg font-bold text-gray-900 dark:text-white">2. Nivel de Generación</h2>
        </div>
        <div class="p-6 flex items-start gap-6">
          <div class={`shrink-0 w-24 h-24 rounded-lg flex items-center justify-center text-xl font-bold border-2 ${
            record.generation.level === 'Alto' ? 'border-red-500 text-red-600 bg-red-50 dark:bg-red-900/20' : 
            'border-green-500 text-green-600 bg-green-50 dark:bg-green-900/20'
          }`}>
            {record.generation.level}
          </div>
          <div>
            <h3 class="text-sm font-medium text-gray-900 dark:text-white">Observaciones Operativas</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">{record.generation.notes}</p>
          </div>
        </div>
      </section>

      <!-- 3. Condición del Sitio -->
      <section class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-700/50 flex justify-between items-center">
          <h2 class="text-lg font-bold text-gray-900 dark:text-white">3. Condición del Sitio</h2>
          <span class={`px-3 py-1 rounded-full text-sm font-bold ${
            record.siteCondition.status === 'Adecuada' ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' :
            record.siteCondition.status === 'Regular' ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200' :
            'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200'
          }`}>
            {record.siteCondition.status}
          </span>
        </div>
        <div class="p-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div>
            <span class="block text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wider">Lixiviados</span>
            <span class="block text-sm font-medium text-gray-900 dark:text-white mt-1">{record.siteCondition.leachates}</span>
          </div>
          <div>
            <span class="block text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wider">Olores</span>
            <span class="block text-sm font-medium text-gray-900 dark:text-white mt-1">{record.siteCondition.odors}</span>
          </div>
          <div>
            <span class="block text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wider">Obstrucción</span>
            <span class="block text-sm font-medium text-gray-900 dark:text-white mt-1">{record.siteCondition.obstruction}</span>
          </div>
          <div>
            <span class="block text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wider">Fauna Nociva</span>
            <span class="block text-sm font-medium text-gray-900 dark:text-white mt-1">{record.siteCondition.fauna ? 'Sí' : 'No'}</span>
          </div>
          <div class="md:col-span-2 lg:col-span-2">
            <span class="block text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wider">Estado de Residuos</span>
            <span class="block text-sm font-medium text-gray-900 dark:text-white mt-1">{record.siteCondition.wasteState}</span>
          </div>
          <div class="md:col-span-2 lg:col-span-3">
            <span class="block text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wider">Observaciones</span>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">{record.siteCondition.notes}</p>
          </div>
        </div>
      </section>

      <!-- 4. Caracterización Detallada -->
      <div class="space-y-6">
        <h2 class="text-xl font-bold text-gray-900 dark:text-white">4. Caracterización de Residuos</h2>
        
        {record.characterization.map((item, index) => (
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-700/50 flex justify-between items-center">
              <h3 class="text-md font-bold text-gray-900 dark:text-white">Residuo #{index + 1}</h3>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">
                {item.type}
              </span>
            </div>
            
            <div class="p-6 grid grid-cols-1 lg:grid-cols-3 gap-8">
              <!-- Datos Físicos -->
              <div class="space-y-4">
                <h4 class="text-xs font-bold text-gray-500 dark:text-gray-400 uppercase tracking-wider border-b border-gray-100 dark:border-gray-700 pb-2">Datos Físicos</h4>
                <div class="grid grid-cols-2 gap-4">
                  <div>
                    <span class="text-xs text-gray-500">Volumen</span>
                    <div class="font-medium text-gray-900 dark:text-white">{item.volume} m³</div>
                  </div>
                  <div>
                    <span class="text-xs text-gray-500">Peso</span>
                    <div class="font-medium text-gray-900 dark:text-white">{item.weight} kg</div>
                  </div>
                  <div>
                    <span class="text-xs text-gray-500">Estado</span>
                    <div class="font-medium text-gray-900 dark:text-white">{item.state}</div>
                  </div>
                  <div>
                    <span class="text-xs text-gray-500">Contaminación</span>
                    <div class="font-medium text-gray-900 dark:text-white">{item.conditions.contamination}</div>
                  </div>
                </div>
              </div>

              <!-- Condiciones Ambientales -->
              <div class="space-y-4">
                <h4 class="text-xs font-bold text-gray-500 dark:text-gray-400 uppercase tracking-wider border-b border-gray-100 dark:border-gray-700 pb-2">Condiciones Ambientales</h4>
                <div class="space-y-2 text-sm">
                  <div class="flex items-center justify-between">
                    <span class="text-gray-500">Lixiviados:</span>
                    <span class={item.conditions.leachates ? 'text-red-500 font-medium' : 'text-gray-900'}>{item.conditions.leachates ? 'Sí' : 'No'}</span>
                  </div>
                  <div class="flex items-center justify-between">
                    <span class="text-gray-500">Vectores:</span>
                    <span class={item.conditions.vectors && item.conditions.vectors.length > 0 ? 'text-red-500 font-medium' : 'text-gray-900'}>{item.conditions.vectors && item.conditions.vectors.length > 0 ? 'Sí' : 'No'}</span>
                  </div>
                  <div class="flex items-center justify-between">
                    <span class="text-gray-500">Malos Olores:</span>
                    <span class={item.conditions.odors !== 'Normal' ? 'text-red-500 font-medium' : 'text-gray-900'}>{item.conditions.odors !== 'Normal' ? 'Sí' : 'No'}</span>
                  </div>
                </div>
              </div>

              <!-- Evidencia y Notas -->
              <div class="space-y-4">
                <h4 class="text-xs font-bold text-gray-500 dark:text-gray-400 uppercase tracking-wider border-b border-gray-100 dark:border-gray-700 pb-2">Evidencia y Notas</h4>
                <div class="grid grid-cols-2 gap-2">
                    {item.evidence.photo && (
                        <img src={item.evidence.photo} alt="Evidencia" class="w-full h-20 object-cover rounded-lg border border-gray-200 dark:border-gray-600" />
                    )}
                </div>
                <div class="mt-2 p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg text-sm text-gray-600 dark:text-gray-300 italic">
                  "{item.evidence.observations}"
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>

    </div>
  </div>
</Layout>