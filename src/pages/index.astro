---
import '../styles/global.css';
import { Image } from 'astro:assets';
import logoSlogan from '../assets/img/logo_slogan.png';
import img1 from '../assets/img/original_1.png';
import img2 from '../assets/img/original_2.png';
import img3 from '../assets/img/original_3.png';
import img4 from '../assets/img/original_4.png';
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="robots" content="noindex" />
		<title>Revalora Circular</title>
	</head>
	<body class="h-screen w-full overflow-hidden bg-black">
		<main class="relative h-full w-full">
			<!-- Background Grid -->
			<div class="absolute inset-0 grid grid-cols-1 grid-rows-4 md:grid-cols-4 md:grid-rows-1 h-full w-full">
				<div class="relative h-full w-full grid-img-1">
					<Image src={img1} alt="Vegetales frescos" class="h-full w-full object-cover" />
					<div class="absolute inset-0 bg-black/40"></div>
				</div>
				<div class="relative h-full w-full grid-img-2">
					<Image src={img2} alt="Frutas y verduras" class="h-full w-full object-cover object-[75%_center]" />
					<div class="absolute inset-0 bg-black/40"></div>
				</div>
				<div class="relative h-full w-full grid-img-3">
					<Image src={img3} alt="Cosecha fresca" class="h-full w-full object-cover object-[75%_center]" />
					<div class="absolute inset-0 bg-black/40"></div>
				</div>
				<div class="relative h-full w-full grid-img-4">
					<Image src={img4} alt="Alimentos saludables" class="h-full w-full object-cover" />
					<div class="absolute inset-0 bg-black/40"></div>
				</div>
			</div>

			<!-- Centered Logo -->
			<div class="absolute inset-0 flex items-center justify-center z-10 p-4">
				<a href="/presentacion" class="block max-w-4xl w-full transition-transform duration-300 hover:scale-105">
					<Image 
						src={logoSlogan} 
						alt="Revalora Circular - Innovación que regenera. Valor que trasciende" 
						class="logo-img w-full h-auto drop-shadow-xl" 
					/>
				</a>
			</div>
		</main>
	</body>
	<script>
		import { gsap } from "gsap";
		
		const mm = gsap.matchMedia();
		
		mm.add("(min-width: 768px)", () => {
			// Optimización: ayuda al navegador a preparar la animación
			gsap.set(".grid-img-1, .grid-img-2, .grid-img-3, .grid-img-4", { willChange: "clip-path" });

			const tl = gsap.timeline();
			
			// Usamos clipPath para un efecto de revelado más fluido y similar al logo
			
			// 1: Revelado de abajo hacia arriba
			// 4: Revelado de arriba hacia abajo (juntas)
			tl.fromTo(".grid-img-1", 
				{ clipPath: "inset(100% 0 0 0)" },
				{ clipPath: "inset(0% 0 0 0)", duration: 1.6, ease: "none.inOut", },
				"start"
			)
			.fromTo(".grid-img-4", 
				{ clipPath: "inset(0 0 100% 0)" },
				{ clipPath: "inset(0 0 0% 0)", duration: 1.6, ease: "none.inOut", },
				"start"
			)
			
			// 2: Revelado de arriba hacia abajo
			// 3: Revelado de abajo hacia arriba (juntas)
			// Ajustamos el inicio relativo a "start" para mayor control.
			.fromTo(".grid-img-2", 
				{ clipPath: "inset(0 0 100% 0)" },
				{ clipPath: "inset(0 0 0% 0)", duration: 1.6, ease: "none.inOut", },
				"start+=0.3"
			) 
			.fromTo(".grid-img-3", 
				{ clipPath: "inset(100% 0 0 0)" },
				{ clipPath: "inset(0% 0 0 0)", duration: 1.6, ease: "none.inOut", },
				"<"
			); 
		});		mm.add("(max-width: 767px)", () => {
			// Optimización
			gsap.set(".grid-img-1, .grid-img-2, .grid-img-3, .grid-img-4", { willChange: "clip-path" });
			
			const tl = gsap.timeline();
			
			// 1: Revelado de derecha a izquierda
			// 4: Revelado de izquierda a derecha
			tl.fromTo(".grid-img-1", 
				{ clipPath: "inset(0 0 0 100%)" },
				{ clipPath: "inset(0 0 0 0%)", duration: 1.6, ease: "expo.inOut" },
				"start"
			)
			.fromTo(".grid-img-4", 
				{ clipPath: "inset(0 100% 0 0)" },
				{ clipPath: "inset(0 0% 0 0)", duration: 1.6, ease: "expo.inOut" },
				"start"
			);
			
			// 2: Revelado de izquierda a derecha
			// 3: Revelado de derecha a izquierda
			tl.fromTo(".grid-img-2", 
				{ clipPath: "inset(0 100% 0 0)" },
				{ clipPath: "inset(0 0% 0 0)", duration: 1.6, ease: "expo.inOut" },
				"-=1.3"
			) 
			.fromTo(".grid-img-3", 
				{ clipPath: "inset(0 0 0 100%)" },
				{ clipPath: "inset(0 0 0 0%)", duration: 1.6, ease: "expo.inOut" },
				"<"
			);
		});

		// Simulación de efecto de escritura (reveal de izquierda a derecha)
		// Nota: Para un efecto de "trazado" real (dibujar líneas), se requiere un SVG inline con strokes.
		// Con el PNG, usamos un clip-path para descubrir el logo progresivamente.
		gsap.fromTo(".logo-img", 
			{ clipPath: "inset(0 100% 0 0)", opacity: 1 }, 
			{ clipPath: "inset(0 0% 0 0)", duration: 1.3, ease: "power2.out", delay: 1 }
		);	</script>
</html>
